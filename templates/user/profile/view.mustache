<img id='profile_photo' src='{{profile.photo}}'>
<div class="profile_body">
    {{#profile}}
    <h2>{{fullname}}</h2>
    <div>{{username}}</div>
    <!--
    <div style="display: table; margin-top: 1em;">
        {{#polo}}<dl style="display: table-cell;padding-right: 1em;"><dt>Pólo</dt><dd>{{polo}}</dd></dl>{{/polo}}
        {{#campus_sigla}}<dl style="display: table-cell;"><dt>Campus</dt><dd>{{campus_sigla}}</dd></dl>{{/campus_sigla}}
    </div>
    -->
    {{/profile}}
    <div>
        {{#courses_count}}
            <div style="margin-top: 1em;"><b>{{#str}}my_courses, theme_ead{{/str}}</b></div>
            <div>
                {{#courses}}
                <div style="border: 1px solid silver;margin-top: 0.5em;padding: 0.25em 0.75em 0.5em 0.75em;">
                    <div style="font-weight: 500;"><a href="{{{ config.wwwroot }}}/course/view.php?id={{id}}">{{title}}</a></div>
                    <div style="font-size: 10pt;display: table;width: 100%;">
                        <span style="display: table-cell;padding-right: 2em;width: 50%;">{{code}}</span>
                        <!--{{#grade}}<span style="display: table-cell; text-align: right;">nota final: {{grade}}</span>{{/grade}}-->
                    </div>
                    
                    <!--{{#progress}}<div class="progress"><div class='progress-bar' role='progressbar' style='width:{{progress}}%'><span class='progress-bar-label'>{{progress}}%</span></div></div>{{/progress}}-->
                    <!--{{^progress}}<div class="progress"><div class="no-progress"><span class='progress-bar-label'>Não iniciado</span></div></div>{{/progress}}-->
                </div>
                {{/courses}}
            </div>
        {{/courses_count}}
        {{^courses_count}}
            <div style="margin-top: 1em;" class="alert alert-warning">Você ainda não está inscrito em nenhum curso ou disciplina.</div>
        {{/courses_count}}

        <br>
        <ul class="nav nav-tabs" id="user_blocks" role="tablist">
        {{#user_blocks}}
            {{^no_elements}}
                <li class="nav-item">
                    <a class="nav-link {{active}}" id="{{name}}-tab" data-toggle="tab" href="#{{name}}" role="tab" aria-controls="{{name}}" aria-selected="false" style="width: 82px;display: inline-block;"><i title="{{title}}" aria-label="{{title}}" class="icon fa fa-{{icon}} fa-fw " style="font-size: 48px;"></i></a>
                </li>
            {{/no_elements}}
        {{/user_blocks}}
        </ul>

        <div class="tab-content">
        {{#user_blocks}}
            {{^no_elements}}
                <div class="tab-pane {{active}}" id="{{name}}" role="tabpanel" aria-labelledby="{{name}}-tab" style="padding: 1em;
        border-left: 1px solid #dee2e6;
        border-right: 1px solid #dee2e6;
        border-bottom: 1px solid #dee2e6;">
                    <p style="text-align: center;"><strong>{{title}}</strong></p>
                    
                    <dl style='display: table;'>
                    {{#nodes}}
                        {{#.}}
                            {{#content}}
                                <div style='display: table-row;' class='profile_{{name}}'>
                                    <span class='{{name}}_label' style='display: table-cell;'>{{title}}</span>
                                    <span class='{{name}}_content' style='display: table-cell; padding-left: 1em;'>{{{content}}}</span>
                                </div>
                            {{/content}}
                            {{^content}}
                                <div style='display: table-row;' class='profile_{{name}}'>
                                    <span class='{{name}}_label' style='display: table-cell;'>&nbsp;</span>
                                    <span class='{{name}}_content' style='display: table-cell; padding-left: 1em;'><a href='{{{url}}}'>{{{title}}}</a></span>
                                </div>
                            {{/content}}
                        {{/.}}
                    {{/nodes}}
                    </dl>
                </div>
            {{/no_elements}}
        {{/user_blocks}}
        </div>
        <!--
        <br>
        <ul>
        {{#rest_nodes}}
        <li>{{title}}</li>
        {{/rest_nodes}}
        </ul>
        -->
    </div>
</div>
